@model Fiap.Revisao.Models.Livro
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(i => i.Isbn)
        @Html.TextBoxFor(i => i.Isbn, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Titulo)
        @Html.TextBoxFor(i => i.Titulo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.DataPublicacao)
        @Html.TextBoxFor(i => i.DataPublicacao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Autor)
        @Html.TextBoxFor(i => i.Autor, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Editora)
        @Html.DropDownListFor(i => i.EditoraId ,
            ViewBag.lista as SelectList, new { @class = "form-control"})
    </div>
    <input type="submit" class="btn btn-primary" value="Salvar" />
}

