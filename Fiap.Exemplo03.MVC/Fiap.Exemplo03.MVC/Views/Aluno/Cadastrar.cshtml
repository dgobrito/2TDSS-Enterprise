@model Fiap.Exemplo03.MVC.Models.Aluno
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Aluno</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(a => a.Nome)
        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Rm)
        @Html.TextBoxFor(a => a.Rm, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.DataNascimento)
        @Html.TextBoxFor(a => a.DataNascimento, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(a => a.Matriculado)
        @Html.LabelFor(a => a.Matriculado)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Curso)
        @Html.DropDownListFor(a => a.Curso ,
            ViewBag.opcoes as SelectList,
            new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

