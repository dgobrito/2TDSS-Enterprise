@model Fiap.Revisao2.Models.Atleta
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>
@TempData["msg"]
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(a => a.Nome)
        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Esporte)
        @Html.DropDownListFor(c => c.EsporteId ,
            ViewBag.lista as SelectList, new { @class = "form-control" })
    </div>
    <input type="submit" value="Salvar" class="btn btn-primary" />
}
