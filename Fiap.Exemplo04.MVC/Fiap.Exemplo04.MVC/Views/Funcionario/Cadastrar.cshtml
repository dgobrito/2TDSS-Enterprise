@model Fiap.Exemplo04.MVC.Models.Funcionario
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Funcionário</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(f => f.Nome)
        @Html.TextBoxFor(f => f.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.DataAdmissao)
        @Html.TextBoxFor(f => f.DataAdmissao, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(f => f.Ativo)
        @Html.LabelFor(f => f.Ativo)
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

