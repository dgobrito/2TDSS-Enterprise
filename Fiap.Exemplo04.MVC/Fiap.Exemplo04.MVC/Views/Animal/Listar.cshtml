@model List<Fiap.Exemplo04.MVC.Models.Animal>
@{
    ViewBag.Title = "Listar";
}

<h2>Lista de Animais</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Espécie</th>
        <th>Carnivoro</th>
        <th>Data Entrada</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Especie</td>
            <td>@(item.Carnivoro?"Sim":"Não")</td>
            <td>@item.DataEntrada.ToShortDateString()</td>
            <td>
                @Html.ActionLink(" ","Alterar", new { id = item.Id},
                    new { @class = "glyphicon glyphicon-pencil btn btn-primary btn-xs" })
                @Html.ActionLink(" ","Remover", new { id = item.Id},
                    new { @class = "glyphicon glyphicon-trash btn btn-danger btn-xs" , onclick = "return confirm('Tem certeza?')" })
            </td>
        </tr>
    }
</table>