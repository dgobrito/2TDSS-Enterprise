@model Fiap.Exemplo04.MVC.Models.Animal
@{
    ViewBag.Title = "Alterar";
}

<h2>Atualização de Animal</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(a => a.Id)
    <div class="form-group">
        @Html.LabelFor(a => a.Nome)
        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.DataEntrada)
        @Html.TextBoxFor(a => a.DataEntrada, "{0:dd/MM/yyyy}" ,new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Especie)
        @Html.TextBoxFor(a => a.Especie, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(a => a.Carnivoro)
        @Html.LabelFor(a => a.Carnivoro)
    </div>
    <input type="submit" value="Salvar" class="btn btn-primary" />
    @Html.ActionLink("Cancelar","Listar",
        "Animal",new { @class = "btn btn-default" })
}
