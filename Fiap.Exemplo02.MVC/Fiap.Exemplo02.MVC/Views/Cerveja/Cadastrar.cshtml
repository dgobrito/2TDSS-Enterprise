
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>
<form action="/cerveja/salvar" method="post">
    <div class="form-group">
        <label for="id-nome">Nome</label>
        <input type="text" name="nome" id="id-nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-validade">Data Validade</label>
        <input type="text" name="validade" id="id-validade" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-teor">Teor Alcoolico</label>
        <input type="text" name="teor" id="id-teor" class="form-control" />
    </div>
    <input type="submit" value="Gravar" class="btn btn-primary" />
</form>

